@model Riddles_In_The_Dark.Models.Riddle

<h4>Riddle</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Solve">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="RiddleQuestion" class="control-label"></label>
				<input asp-for="RiddleQuestion" class="form-control" />
				<span asp-validation-for="RiddleQuestion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RiddleAnswer" class="control-label"></label>
				<input asp-for="RiddleAnswer" class="form-control" />
				<span asp-validation-for="RiddleAnswer" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Solve" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div class="row">
	<form asp-action="SeeAnswer">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group-hidden">
			<label asp-for="RiddleAnswer" class="control-label">Do you give up?</label>
			<input asp-for="RiddleAnswer" class="form-control" />
			<span asp-validation-for="RiddleAnswer" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="I Need To Know!" class="btn btn-primary" />
		</div>
	</form>
</div>
<div class="form-group-hidden">
	<label asp-for="RiddleAnswer" class="control-label">Do you give up?</label>
	<input asp-for="RiddleAnswer" class="form-control" />
	<span asp-validation-for="RiddleAnswer" class="text-danger"></span>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
